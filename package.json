{
  "name": "root",
  "private": true,
  "scripts": {
    "airtable": "node -r esm airtable.js",
    "build:game-local": "yarn && yarn workspace @ccg/game build",
    "start:app-multi": "yarn && yarn workspace @ccg/app-multi-comps start",
    "start:game-local": "yarn && yarn workspace @ccg/game start",
    "start:storybook": "yarn && yarn workspace @ccg/storybook storybook",
    "start:server": "yarn && yarn workspace @ccg/server nodemon-extended",
    "test": "FORCE_COLOR=true lerna run lint && CI=true FORCE_COLOR=true lerna run test -- --coverage",
    "deploy": "FORCE_COLOR=true lerna run deploy"
  },
  "workspaces": {
    "packages": [
      "packages/apps/*",
      "packages/components",
      "packages/config",
      "packages/data",
      "packages/enums",
      "packages/hooks",
      "packages/server",
      "packages/storybook",
      "packages/utils"
    ],
    "nohoist": [
      "packages/apps/**/webpack-dev-server",
      "**/babel-loader",
      "**/babel-jest"
    ]
  },
  "devDependencies": {
    "airtable-node": "^0.1.20",
    "babel-eslint": "10.0.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-flowtype": "^4.5.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "esm": "^3.2.25",
    "husky": "^4.0.6",
    "jest-prop-type-error": "^1.1.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1"
  },
  "resolutions": {
    "react-dev-utils": "10.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/setupTests.{js,jsx,ts,tsx}",
      "!src/index.{js,jsx,ts,tsx}",
      "!src/serviceWorker.{js,jsx,ts,tsx}",
      "!src/**/*.(spec|test|stories).{js,jsx,ts,tsx}"
    ]
  }
}
